---
import type { HTMLAttributes } from 'astro/types';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + subpath?.[0];

const baseClass =
	'inline-flex items-center rounded-full px-3 py-1.5 text-sm font-medium text-slate-600 dark:text-slate-300 hover:text-slate-900 dark:hover:text-white hover:bg-slate-900/5 dark:hover:bg-white/10 transition-colors';
const activeClass = 'text-slate-900 dark:text-white bg-slate-900/5 dark:bg-white/10';
---

<a
	href={href}
	aria-current={isActive ? 'page' : undefined}
	class:list={[baseClass, className, isActive && activeClass]}
	{...props}
>
	<slot />
</a>
