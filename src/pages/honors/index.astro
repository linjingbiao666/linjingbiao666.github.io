                <a id="dialog-download" href="#" download class="absolute bottom-4 right-4 p-3 bg-white/90 text-slate-900 rounded-full shadow-lg opacity-0 group-hover:opacity-100 transition-opacity hover:bg-white z-10" title="下载原图">
                    <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg>
                </a>
            </div>

            <!-- Info Side -->
            <div class="w-full md:w-1/2 p-6 md:p-8 overflow-y-auto">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <span id="dialog-level" class="inline-block px-2 py-0.5 rounded text-xs font-bold mb-2 border"></span>
                        <h2 id="dialog-title" class="text-2xl font-bold text-slate-900 dark:text-white"></h2>
                    </div>
                    <button id="dialog-close" class="p-2 rounded-full hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">
