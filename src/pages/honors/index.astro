    <!-- Inject Data for JS -->
    <script define:vars={{ items }}>
        window.HONORS_DATA = items;
    </script>

	<script>
        // DOM Elements
		const dialog = document.getElementById('honor-dialog');
		const closeBtn = document.getElementById('dialog-close');
        const gridView = document.getElementById('grid-view');
        const timelineView = document.getElementById('timeline-view');
        const emptyState = document.getElementById('empty-state');
        const searchInput = document.getElementById('honor-search');
        const filterBtns = document.querySelectorAll('.filter-btn');
        const viewBtns = document.querySelectorAll('.view-btn');
        const zoomDialog = document.getElementById('zoom-dialog'); // changed from zoomOverlay
        const zoomImg = document.getElementById('zoom-img');
        const zoomClose = document.getElementById('zoom-close');
        const dialogImg = document.getElementById('dialog-img');

        // State
        let currentFilter = 'all';
        let currentSearch = '';
        let isZoomed = false; // For the secondary zoom inside overlay

        const activeFilterClasses = ['bg-white', 'text-slate-900', 'shadow-sm', 'dark:bg-slate-800', 'dark:text-white'];
        const inactiveFilterClasses = ['text-slate-500', 'hover:text-slate-900', 'dark:hover:text-white'];

        const activeViewClasses = ['bg-white', 'shadow-sm', 'dark:bg-slate-800', 'dark:text-white'];
        const inactiveViewClasses = ['text-slate-400', 'hover:text-slate-900', 'dark:hover:text-white'];

        // --- Zoom Overlay Logic ---
        function openZoom(src) {
            if (!zoomDialog || !zoomImg) return;
            zoomImg.src = src;
            
            // Use native showModal for top-layer behavior
            if (typeof zoomDialog.showModal === 'function') {
                zoomDialog.showModal();
            } else {
                // Fallback if needed, though most browsers support it
                zoomDialog.style.display = 'flex';
            }

            // Reset scale state
            isZoomed = false;
            zoomImg.style.transform = 'scale(1)';
            zoomImg.style.cursor = 'zoom-in';
            // Slight delay for entrance animation
            requestAnimationFrame(() => {
                zoomImg.classList.remove('scale-95');
                zoomImg.classList.add('scale-100');
            });
        }

        function closeZoom() {
            if (!zoomDialog || !zoomImg) return;
            
            zoomImg.classList.remove('scale-100');
            zoomImg.classList.add('scale-95');
            // Reset zoom state
            setTimeout(() => {
                isZoomed = false;
                zoomImg.style.transform = '';
                if (typeof zoomDialog.close === 'function') {
                    zoomDialog.close();
                } else {
                    zoomDialog.style.display = 'none';
                }
            }, 300);
        }

        function toggleDeepZoom(e) {
            e.stopPropagation();
            if (!zoomImg) return;
            
            isZoomed = !isZoomed;
            if (isZoomed) {
                // Calculate click position for transform origin if possible, 
                // but simple 2x center scale is safer for now across devices
                zoomImg.style.transform = 'scale(2.5)';
                zoomImg.style.cursor = 'zoom-out';
                // Allow panning if needed? For now just simple scale. 
                // If we want panning, we need more complex logic. 
                // Browser native scroll behavior with overflow-auto container is easiest for mobile.
            } else {
                zoomImg.style.transform = 'scale(1)';
                zoomImg.style.cursor = 'zoom-in';
            }
        }

        dialogImg?.addEventListener('click', (e) => {
            if (dialogImg instanceof HTMLImageElement) {
                openZoom(dialogImg.src);
            }
        });

        zoomClose?.addEventListener('click', closeZoom);
        
        zoomDialog?.addEventListener('click', (e) => {
            // Close if clicked on backdrop (which is the dialog element itself in this case or the wrapper div)
            // Since we have a wrapper div inside dialog, we check if click target is the wrapper
            // But wait, the wrapper is full screen.
            // Let's check if the target is NOT the image or button
            if (e.target !== zoomImg && !e.target.closest('#zoom-close') && e.target !== zoomDialog) {
                 // If clicked on wrapper div (background)
                 closeZoom();
            }
            // If native dialog backdrop is clicked, e.target is the dialog itself
            if (e.target === zoomDialog) {
                closeZoom();
            }
        });

        zoomImg?.addEventListener('click', toggleDeepZoom);

        // ESC to close zoom first, then dialog
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Escape') {
                if (zoomDialog && zoomDialog.open) { // Check if open property is true
                    e.preventDefault();
                    e.stopPropagation(); // Stop dialog from closing
                    closeZoom();
                }
            }
        }, true); // Capture phase to catch it before dialog

        // Helper to set active state
        function setActive(elements, activeEl, activeClasses, inactiveClasses) {
            elements.forEach(el => {
                if (el === activeEl) {
                    el.classList.add(...activeClasses);
                    el.classList.remove(...inactiveClasses);
                    // Also handle specific color overrides if any (e.g. view toggle icons)
                    if (el.classList.contains('view-btn')) {
                        el.classList.remove('text-slate-600', 'dark:text-slate-300'); // Remove default active colors if present in HTML
                    }
                } else {
                    el.classList.remove(...activeClasses);
                    el.classList.add(...inactiveClasses);
                }
            });
        }

        // Initialize state (since HTML has hardcoded classes, we might want to clean them up or just let JS handle clicks. 
        // But for initial load consistency, the HTML already has 'active' classes manually added to the first item. 
        // We just need to make sure the JS logic matches.)

        // --- Dialog Logic ---
		window.openHonor = (id) => {
            const item = window.HONORS_DATA.find(i => i.id === id);
            if (!item || !dialog) return;

            // Populate
            const img = document.getElementById('dialog-img');
            img.src = item.original;
            
            document.getElementById('dialog-title').textContent = item.title;
            document.getElementById('dialog-issuer').textContent = item.issuer;
            document.getElementById('dialog-time').textContent = item.time.display;
            
            // Level styling
            const levelEl = document.getElementById('dialog-level');
            levelEl.textContent = item.level;
            levelEl.className = `inline-block px-2 py-0.5 rounded text-xs font-bold mb-2 border ${
                item.level === '国家级' ? 'text-rose-600 border-rose-200 bg-rose-50' :
                item.level === '省级' ? 'text-indigo-600 border-indigo-200 bg-indigo-50' :
                'text-emerald-600 border-emerald-200 bg-emerald-50'
            }`;

            // Details
            const criteriaBox = document.getElementById('dialog-criteria-box');
            const descBox = document.getElementById('dialog-desc-box');
            const ratioBox = document.getElementById('dialog-ratio-box');
            const extraContainer = document.getElementById('dialog-extra');

            if (item.criteria) {
                document.getElementById('dialog-criteria').textContent = item.criteria;
                criteriaBox.classList.remove('hidden');
            } else {
                criteriaBox.classList.add('hidden');
            }

            if (item.description) {
                document.getElementById('dialog-desc').textContent = item.description;
                descBox.classList.remove('hidden');
            } else {
                descBox.classList.add('hidden');
            }

            if (item.criteria || item.description) {
                extraContainer.classList.remove('hidden');
            } else {
                extraContainer.classList.add('hidden');
            }

            if (item.ratio) {
                document.getElementById('dialog-ratio').textContent = item.ratio;
                ratioBox.classList.remove('hidden');
            } else {
                ratioBox.classList.add('hidden');
            }

            // Download
            document.getElementById('dialog-download').href = item.original;

			dialog.showModal();
		};

		closeBtn?.addEventListener('click', () => dialog?.close());
		dialog?.addEventListener('click', (e) => {
            const rect = dialog.getBoundingClientRect();
            if (e.clientY < rect.top || e.clientY > rect.bottom || e.clientX < rect.left || e.clientX > rect.right) {
                dialog.close();
            }
		});

        // --- Filter Logic ---
        function filterItems() {
            const levelSections = document.querySelectorAll('.level-section');
            let totalVisibleCount = 0;

            levelSections.forEach(levelSection => {
                const categorySections = levelSection.querySelectorAll('.category-section');
                let levelHasVisibleItems = false;
                
                // If filter is active and this level doesn't match, hide the whole level section
                const levelName = levelSection.dataset.level;
                if (currentFilter !== 'all' && levelName !== currentFilter) {
                    levelSection.classList.add('hidden');
                    return; // Skip processing categories
                }

                categorySections.forEach(catSection => {
                    // Check if category has any visible items across all years
                    const yearGroups = catSection.querySelectorAll('.year-group');
                    let catHasVisibleItems = false;
                    
                    yearGroups.forEach(yearGroup => {
                        const cards = yearGroup.querySelectorAll('.honor-card');
                        let yearHasVisibleItems = false;

                        cards.forEach(card => {
                            const searchStr = card.dataset.search;
                            const matchSearch = !currentSearch || searchStr.includes(currentSearch);

                            if (matchSearch) {
                                card.classList.remove('hidden');
                                yearHasVisibleItems = true;
                                totalVisibleCount++;
                            } else {
                                card.classList.add('hidden');
                            }
                        });

                        if (yearHasVisibleItems) {
                            yearGroup.classList.remove('hidden');
                            catHasVisibleItems = true;
                        } else {
                            yearGroup.classList.add('hidden');
                        }
                    });

                    if (catHasVisibleItems) {
                        catSection.classList.remove('hidden');
                        levelHasVisibleItems = true;
                    } else {
                        catSection.classList.add('hidden');
                    }
                });

                if (levelHasVisibleItems) {
                    levelSection.classList.remove('hidden');
                } else {
                    levelSection.classList.add('hidden');
                }
            });

            // Also handle timeline view (which is flat list)
            // Note: Timeline view logic needs to be separate or we need to rethink structure
            // For now, let's just apply simple filter to timeline items since they are not nested in sections in HTML
            const timelineCards = document.querySelectorAll('#timeline-view .honor-card');
            timelineCards.forEach(card => {
                 const level = card.dataset.level;
                 const searchStr = card.dataset.search;
                 const matchFilter = currentFilter === 'all' || level === currentFilter;
                 const matchSearch = !currentSearch || searchStr.includes(currentSearch);
                 
                 if (matchFilter && matchSearch) {
                     card.classList.remove('hidden');
                     // totalVisibleCount is already tracked by grid view loop? No, they are separate views.
                     // But empty state depends on *any* visible item. 
                     // Since we only show one view at a time, we should track visibility based on active view.
                 } else {
                     card.classList.add('hidden');
                 }
            });
            
            // Re-calculate visible count based on ACTIVE view
            let activeVisibleCount = 0;
            if (!gridView.classList.contains('hidden')) {
                 // Count visible cards in grid
                 activeVisibleCount = document.querySelectorAll('#grid-view .honor-card:not(.hidden)').length;
            } else {
                 activeVisibleCount = document.querySelectorAll('#timeline-view .honor-card:not(.hidden)').length;
            }

            if (activeVisibleCount === 0) {
                emptyState.classList.remove('hidden');
                gridView.classList.add('hidden');
                timelineView.classList.add('hidden');
            } else {
                emptyState.classList.add('hidden');
                if (document.getElementById('view-grid').classList.contains('shadow-sm')) {
                    gridView.classList.remove('hidden');
                } else {
                    timelineView.classList.remove('hidden');
                }
            }
        }

        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                setActive(filterBtns, btn, activeFilterClasses, inactiveFilterClasses);
                currentFilter = btn.dataset.filter;
                filterItems();
            });
        });

        searchInput?.addEventListener('input', (e) => {
            currentSearch = e.target.value.toLowerCase();
            filterItems();
        });

        // --- View Toggle ---
        document.getElementById('view-grid').addEventListener('click', function() {
            setActive(viewBtns, this, activeViewClasses, inactiveViewClasses);
            gridView.classList.remove('hidden');
            timelineView.classList.add('hidden');
            filterItems(); 
        });

        document.getElementById('view-timeline').addEventListener('click', function() {
            setActive(viewBtns, this, activeViewClasses, inactiveViewClasses);
            gridView.classList.add('hidden');
            timelineView.classList.remove('hidden');
            filterItems();
        });

	</script>
