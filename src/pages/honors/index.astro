                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
	<section id="content-area" class="min-h-[50vh]">
        <!-- Grid View (Default) -->
        <div id="grid-view" class="space-y-16">
            {levelOrder.filter(level => groupedItems[level]).map(level => (
                <div class="level-section" data-level={level}>
                    <div class="flex items-center gap-4 mb-8">
                         <span class={`w-2 h-8 rounded-full ${levelColors[level].split(' ')[0]}`}></span>
