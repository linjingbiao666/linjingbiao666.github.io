                            <span class="text-2xl font-black text-emerald-700 dark:text-emerald-300">{stats.school}</span>
                        </div>
                    </div>
                </div>

                <!-- Visualization -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 pt-6 border-t border-slate-200/60 dark:border-slate-800/60">
                    <!-- Trend Chart -->
