import BaseLayout from '../../layouts/BaseLayout.astro';
import honorsDataRaw from '../../data/honors.generated.json';
import honorsOverridesRaw from '../../data/honors.overrides.json';
import type { HonorItem, HonorsGeneratedData, HonorLevel } from '../../data/honors';
import { SITE_TITLE } from '../../consts';

const honorsData = honorsDataRaw as unknown as HonorsGeneratedData;
const overrides = honorsOverridesRaw as { items: Record<string, Partial<HonorItem>> };

// 1. Merge Data
const items: HonorItem[] = honorsData.items.map(item => {
    const override = overrides.items[item.id] || {};
    return { ...item, ...override };
});

// 2. Stats Calculation
const total = items.length;
const stats = {
    total,
    national: items.filter(i => i.level === '国家级').length,
    provincial: items.filter(i => i.level === '省级').length,
    school: items.filter(i => i.level === '校级').length,
};

// Group by Year for Trend Chart
const years = [...new Set(items.map(i => i.time.yearStart || i.time.yearEnd || 0).filter(y => y > 0))].sort();
const trendData = years.map(year => {
    return items.filter(i => (i.time.yearStart === year || i.time.yearEnd === year)).length;
});
const maxTrend = Math.max(...trendData, 1);

// Group by Category for Pie Chart
const categories = [...new Set(items.map(i => i.category))];
const categoryData = categories.map(cat => ({
    name: cat,
    value: items.filter(i => i.category === cat).length
})).sort((a, b) => b.value - a.value);

// Colors
const levelColors: Record<string, string> = {
    '国家级': 'bg-rose-500 text-white border-rose-600',
    '省级': 'bg-indigo-500 text-white border-indigo-600',
    '校级': 'bg-emerald-500 text-white border-emerald-600',
    'default': 'bg-slate-500 text-white border-slate-600'
};

const levelTextColors: Record<string, string> = {
    '国家级': 'text-rose-600 dark:text-rose-400',
    '省级': 'text-indigo-600 dark:text-indigo-400',
    '校级': 'text-emerald-600 dark:text-emerald-400',
    'default': 'text-slate-600 dark:text-slate-400'
};

// Grouping Logic
const groupedItems: Record<string, Record<string, Record<string, HonorItem[]>>> = {};
const sortedItems = [...items].sort((a, b) => (b.time.yearEnd || 0) - (a.time.yearEnd || 0));

for (const item of sortedItems) {
    if (!groupedItems[item.level]) {
        groupedItems[item.level] = {};
    }
    if (!groupedItems[item.level][item.category]) {
        groupedItems[item.level][item.category] = {};
    }
    const yearKey = item.time.display || '其他';
    if (!groupedItems[item.level][item.category][yearKey]) {
        groupedItems[item.level][item.category][yearKey] = [];
    }
    groupedItems[item.level][item.category][yearKey].push(item);
}

const levelOrder = ['国家级', '省级', '校级'];

const buildSrcSet = (item: HonorItem) => {
	const parts = [
		item.thumbs.w320 ? `${item.thumbs.w320} 320w` : null,
		item.thumbs.w640 ? `${item.thumbs.w640} 640w` : null,
		item.thumbs.w960 ? `${item.thumbs.w960} 960w` : null
	].filter(Boolean);
	return parts.join(', ');
};
