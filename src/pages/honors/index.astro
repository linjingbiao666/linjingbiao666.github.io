            </div>
            <p class="text-slate-500 dark:text-slate-400">没有找到匹配的荣誉</p>
        </div>
	</section>

    <!-- Detailed Modal -->
	<dialog
		id="honor-dialog"
		class="m-auto w-full max-w-4xl rounded-3xl border border-slate-200/70 dark:border-slate-800/70 bg-white/95 dark:bg-slate-950/95 backdrop:backdrop-blur p-0 shadow-2xl"
	>
		<div class="flex flex-col md:flex-row h-full max-h-[90vh]">
            <!-- Image Side -->
            <div class="w-full md:w-1/2 bg-slate-100 dark:bg-slate-900 flex items-center justify-center p-4 md:p-8 relative group overflow-hidden">
