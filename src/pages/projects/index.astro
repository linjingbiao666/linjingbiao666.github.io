---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE } from '../../consts';
import { getCollection } from 'astro:content';
import Card from '../../components/Card.astro';

const projects = (await getCollection('projects')).sort(
	(a, b) => (b.data.pubDate?.valueOf() || 0) - (a.data.pubDate?.valueOf() || 0)
);
---

<BaseLayout title={`项目展示 - ${SITE_TITLE}`} description="我的项目作品集">
    <div class="mb-12 text-center">
        <h1 class="text-3xl sm:text-4xl font-bold tracking-tight text-slate-900 dark:text-white mb-4">项目展示</h1>
        <p class="text-base sm:text-lg text-slate-600 dark:text-slate-300">
            精选项目与实践成果
        </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {projects.map((project) => (
            <Card post={project} />
        ))}
    </div>
</BaseLayout>
